//load function here. var automationSettings=[0,0,0]; Is the variable to store all data.
//Index has to be manualy set in the objects to avoid order conflicts and corruption of data with new releases down the road.
buildAutoSettings();
//The functions(autoBuildToggleButton and autoBuildValueButton) take objects only in format name/description/index
// so that you don't have to send in arrays for when you need mixed types.
//an array of test objects
var autoLoopsettings = [{
        name:'Buy Storage',
        description:'Will buy storage when resource is almost full',        
        index:0
    },{
        name:'Manual Gather',
        description:'Will automatically gather resources and trap trimps',        
        index:1
    },{
        name:'Buy Jobs',
        description:'Buys jobs based on ratios configured',        
        index:2
    },{
        name:'Buy Buildings',
        description:'Will buy non storage buildings as soon as they are available',        
        index:3
    },{
        name:'Buy Upgrades',
        description:'autobuy non eqipment Upgrades',        
        index:4
    }];
    //a test object for demo
    var randomObject={name:'George',description:'He does things!',index:5};
    
    //begin function list 
    //buildAutoSettings() should be in a place for easy access. Maybe throw at the top?
    // the rest of them can go to the bottom of the page with no issue.
function buildAutoSettings()
    {
     createClass('.long-shadow',"display: inline-block;	vertical-align: top;	margin-left: 2vw;	margin-right: 2vw;	width: 15.5vw;");
    
    //thinking maybe using <div>'s instead might be a better option? Can't seem to figure a way to get value pairs to work.
        var itter=0;
        var autoTable= document.createElement("TBODY");
        var tableRow= document.createElement("TR"); //only need one tr        
        autoTable.appendChild(tableRow);
        
        var tableData= document.createElement("TD");
        tableRow.appendChild(tableData);
        tableData.setAttribute("style","vertical-align: top;");        
        tableData.appendChild(document.createTextNode("Loops"));//Title
        tableData.appendChild(document.createElement("BR"));         
        for(itter=0;itter<3;++itter){
        tableData.appendChild(autoBuildToggleButton(autoLoopsettings[itter]));
        }        
        
        
        tableData= document.createElement("TD");
        tableRow.appendChild(tableData);
        tableData.setAttribute("style","vertical-align: top;");        
        tableData.appendChild(document.createTextNode("Equipment"));//Title
        tableData.appendChild(document.createElement("BR"));  
        //using a for loop to put a bunch of stuff in the container
        for(itter=3;itter<5;++itter){
        tableData.appendChild(autoBuildValueButton(autoLoopsettings[itter]));
        }        
        
        //simple demo of current code working
        tableData= document.createElement("TD"); //new container for a column of options
        tableRow.appendChild(tableData);
        tableData.setAttribute("style","vertical-align: top;");        
        tableData.appendChild(document.createTextNode("Dudes"));//Title
        tableData.appendChild(document.createElement("BR"));    
        //just gonna put one this time.
        tableData.appendChild(autoBuildToggleButton(randomObject));
        
        
        //last thing is to put all our work on to the page.
        document.getElementById("autoSettings").appendChild(autoTable);
    }
//start of stuff to throw at the bottom
